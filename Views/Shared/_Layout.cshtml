<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - aspnetcore_Vue_starter</title>

    <environment names="Staging,Production">
        <link href=~/dist/static/css/app.css rel="stylesheet" asp-append-version="true" >
    </environment>
</head>

<body>
    <div id="app">
        @RenderBody()
    </div>

    <environment names="Development">
        <script type="text/javascript" src="/dist/app.js"></script>
    </environment>
    <environment names="Staging,Production">
      <script type="text/javascript" src="~/dist/static/js/manifest.js" asp-append-version="true"></script>
      <script type="text/javascript" src="~/dist/static/js/vendor.js" asp-append-version="true"></script>
      <script type="text/javascript" src="~/dist/static/js/app.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>

</html>
